<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mad2"
    android:orientation="vertical"

    android:padding="16dp"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/collegeLogo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/logo"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"
        />

    <!-- Top-right aligned names and roll numbers -->
    <TextView
        android:id="@+id/topRightNames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Madivalaya 22BTCS133\nNitesh Kumar 22BTCS134\nUday Reddy 22BTCS135\nHarshitha A 22BTCS136"
        android:textAlignment="viewEnd"
        android:gravity="end"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/noteInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_note_input"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textColorHint="#544141"
        android:autofillHints="text"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#000000" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_button_text"
        android:textColor="#000000"
        android:backgroundTint="#FFA000"
        android:layout_gravity="center_horizontal"
        android:minHeight="48dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/rollNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/roll_numbers"
        android:textColor="#000000"
        android:padding="8dp"
        android:textSize="14sp"
        android:background="#5FCE64"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/notesList"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:divider="#B18A8A"
        android:dividerHeight="1dp"
        android:textColor="#000000"
        tools:listitem="@layout/note_item" />

</LinearLayout>
